<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<HediffDef ParentName="PsycastHediffBase">
		<defName>VPEH_Bloodfocus</defName>
		<label>Bloodfocus</label>
		<description>Rapidly regenerating psyfocus at the cost of hemogen.</description>
		<hediffClass>VPEHemosage.Hediff_Bloodfocus</hediffClass>
		<comps>
			<li Class="HediffCompProperties_Effecter">
				<stateEffecter>VPEH_Bloodfocus</stateEffecter>
			</li>
		</comps>
	</HediffDef>
	
	<HediffDef>
		<defName>VPEH_Bloodmist</defName>
		<label>Bloodmist</label>
		<description>A special sanguophage particle is blocking the airways and causes intense vomiting.</description>
		<hediffClass>VPEHemosage.Hediff_Bloodmist</hediffClass>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<showRemainingTime>True</showRemainingTime>
				<disappearsAfterTicks>2500</disappearsAfterTicks>
			</li>
			<li Class="HediffCompProperties_DisappearsOnDeath"/>
		</comps>
	</HediffDef>

	<HediffDef ParentName="PsycastHediffBase">
		<defName>VPEH_BloodRite</defName>
		<label>blood rite</label>
		<description>Psychic sensitivity is amplified by the current hemogen level.</description>
		<hediffClass>VPEHemosage.Hediff_BloodRite</hediffClass>
		<comps>
			<li Class="VanillaPsycastsExpanded.HediffCompProperties_SpawnMote">
				<moteDef>VPEH_BloodRite</moteDef>
			</li>
		</comps>
	</HediffDef>

</Defs>
